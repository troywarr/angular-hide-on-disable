include ./mixins.jade


doctype html
html.no-js(
  lang="en"
  ng-app="example"
)

  head

    meta(charset="UTF-8")
    meta(
      http-equiv="X-UA-Compatible"
      content="IE=edge,chrome=1"
    )
    block description
    meta(
      name="keywords"
      content=""
    )
    meta(
      name="viewport"
      content="width=device-width, initial-scale=1"
    )
    meta(
      name="author"
      content="Troy Warr <troy3000@gmail.com>"
    )
    block title
    link(
      rel="shortcut icon"
      href="/favicon.ico"
    )
    link(
      rel="stylesheet"
      href="/styles/index.min.css"
    )

  body(ng-cloak)

    include ../../../dist/svg/icons.svg

    +ie('if lt IE 10')
      p(class="browsehappy") You are using an #[strong outdated] browser. Please #[a(href="http://browsehappy.com/" target="_blank") upgrade your browser] to improve your experience.

    main
      block main

    script(src="/scripts/index.min.js")
